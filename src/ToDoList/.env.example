# Docker Compose Environment Variables
# Copy this file to .env and fill with your actual values
# This file centralizes all configuration for docker-compose

# ============================================
# API Configuration
# ============================================
AZURE_AD_INSTANCE=https://your-tenant.ciamlogin.com/
AZURE_AD_TENANT_ID=00000000-0000-0000-0000-000000000000
AZURE_AD_CLIENT_ID=00000000-0000-0000-0000-000000000000
AZURE_AD_CLIENT_SECRET=your-api-client-secret
SWAGGER_CLIENT_ID=00000000-0000-0000-0000-000000000000
ASPNETCORE_ENVIRONMENT=Development

# ============================================
# Console Configuration
# ============================================
CONSOLE_AZURE_AD_TENANT_ID=00000000-0000-0000-0000-000000000000
CONSOLE_AZURE_AD_CLIENT_ID=00000000-0000-0000-0000-000000000000
CONSOLE_AZURE_AD_CLIENT_SECRET=your-console-client-secret
TODOLIST_API_BASE_URL=http://api:8080/api
TODOLIST_API_SCOPE=api://your-api-client-id/.default
DOTNET_ENVIRONMENT=Development

# ============================================
# SPA Configuration (Build Args)
# ============================================
REACT_APP_TENANT_ID=00000000-0000-0000-0000-000000000000
REACT_APP_TENANT_SUBDOMAIN=your-tenant-subdomain
REACT_APP_CLIENT_ID=00000000-0000-0000-0000-000000000000
REACT_APP_API_CLIENT_ID=00000000-0000-0000-0000-000000000000
REACT_APP_API_ENDPOINT=http://localhost:3000/api/todolist
